<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>222</display-name>
  <filter>
    <filter-name>gzip</filter-name>
    <filter-class>org.frame.web.gzip.CompressionFilter</filter-class>
    <init-param>
      <param-name>notCheckFiles</param-name>
      <param-value>intf.cll,uploadWeb.cll,clientUserWeb.cll,orderInfoWeb.cll,updatelog.cll,stat.cll,loginWeb.cll,login.jsp,image.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>notCheckFloders</param-name>
      <param-value>html</param-value>
    </init-param>
    <init-param>
      <param-name>actionSuffix</param-name>
      <param-value>.cll</param-value>
    </init-param>
    <init-param>
      <param-name>SessionCheckClass</param-name>
      <param-value>com.mz.sys.web.CheckSessionInfo</param-value>
    </init-param>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>CaCheTime</param-name>
      <param-value>2592000</param-value>
    </init-param>
  </filter>
  <servlet>
    <servlet-name>WebDispather</servlet-name>
    <servlet-class>org.frame.web.WebDispather</servlet-class>
    <init-param>
      <param-name>uploadDir</param-name>
      <param-value>upload</param-value>
    </init-param>
    <init-param>
      <param-name>actionSuffix</param-name>
      <param-value>.cll</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>init</servlet-name>
    <servlet-class>com.mz.sys.web.SysInitWeb</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebDispather</servlet-name>
    <url-pattern>*.cll</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>gzip</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
</web-app>